<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <!-- Macuahuitl -->
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef[defName="ZF_MakeMacuahuitl"]/fixedIngredientFilter/thingDefs</xpath>
      <value>
        <li>GU_RedWood</li>
        <li>AB_MushroomWoodLog</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef[defName="ZF_MakeMacuahuitl"]/defaultIngredientFilter/thingDefs</xpath>
      <value>
        <li>GU_RedWood</li>
        <li>AB_MushroomWoodLog</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/RecipeDef[defName="ZF_MakeMacuahuitl"]/ingredients</xpath>
      <value>
        <ingredients>
          <li>
            <filter>
              <categories>
                <li>Wooden</li>
              </categories>
              <thingDefs>
                <li>GU_RedWood</li>
                <li>AB_MushroomWoodLog</li>
              </thingDefs>
            </filter>
            <count>30</count>
          </li>
          <li>
            <filter>
              <thingDefs>
                <li>ZF_SharpStoneShard</li>
              </thingDefs>
            </filter>
            <count>3</count>
          </li>
        </ingredients>
      </value>
    </match>
  </Operation>


  <!-- Neolithic axe -->
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef[defName="ZF_MakeNeolithicAxe"]/fixedIngredientFilter/thingDefs</xpath>
      <value>
        <li>GU_RedWood</li>
        <li>AB_MushroomWoodLog</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/RecipeDef[defName="ZF_MakeNeolithicAxe"]/defaultIngredientFilter/thingDefs</xpath>
      <value>
        <li>GU_RedWood</li>
        <li>AB_MushroomWoodLog</li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Biomes</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/RecipeDef[defName="ZF_MakeNeolithicAxe"]/ingredients</xpath>
      <value>
        <ingredients>
          <li>
            <filter>
              <categories>
                <li>Wooden</li>
              </categories>
              <thingDefs>
                <li>GU_RedWood</li>
                <li>AB_MushroomWoodLog</li>
              </thingDefs>
            </filter>
            <count>20</count>
          </li>
          <li>
            <filter>
              <thingDefs>
                <li>ZF_SharpStoneShard</li>
              </thingDefs>
            </filter>
            <count>1</count>
          </li>
        </ingredients>
      </value>
    </match>
  </Operation>
  
</Patch>
