  <RecipeDef>
    <defName>MakeRoughGem</defName>
    <label>Make Rough Gems</label>
    <description>Make rough gems using extreme heat and pressures. This is a slow and tedious processs.</description>
    <jobString>Making rough gems.</jobString>
    <workAmount>6000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <recipeUsers>
      <li>Matterfab</li>
      <li>EAF</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GlassBatch</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>HCM</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GlassBatch</li>
      </thingDefs>
      <categories>
        <li>HCM</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>GlassBatch</li>
      </thingDefs>
      <categories>
        <li>HCM</li>
      </categories>
    </defaultIngredientFilter>
    <products>
